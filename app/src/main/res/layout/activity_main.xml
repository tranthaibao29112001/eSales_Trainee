<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_marginHorizontal="30dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"/>
        <EditText
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:layout_below="@id/logo"
            android:id="@+id/userNameEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:layout_below="@id/userNameEditTxt"
            android:id="@+id/passwordEditTxt"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_below="@+id/passwordEditTxt"
            android:id="@+id/btnLayout"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:id="@+id/loginBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="ĐĂNG NHẬP"/>
            <Button
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/outBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="THOÁT"/>
        </LinearLayout>

        <Button
            android:enabled="false"
            android:id="@+id/aboutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLayout"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:text="VỀ CHÚNG TÔI" />

    </RelativeLayout>

    <TextView
        android:id="@+id/versionTxt"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:text="Phiên bản ngày: 20180730_0044 \n eSales Version: 2.0"/>

</RelativeLayout>